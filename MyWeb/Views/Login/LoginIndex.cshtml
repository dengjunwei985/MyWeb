
@{
    ViewBag.Title = "LoginIndex";
}
@section Styles {
    <link href="~/Content/LoginBox.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Scripts/LoginSend.js"></script>
}

<div class="login-box">
    <h2>登录</h2>
    <form>
        <div class="user-box">
            <input type="text" id="user_email" name="username" required>
            <label>邮箱</label>
        </div>
        <div class="user-box">
            <input type="password" id="user_password" name="password" required>
            <label>密码</label>
        </div> 
        <button id="LoginSend" onclick="loginSend(event)" return false;>
            登录
        </button>
        <div class="links"> 
            <a href="@Url.Action("ForgetIndex","Forget")">忘记密码？</a>
            <a href="@Url.Action("RegisterIndex","Register")">注册新账号</a>
        </div>
    </form>
</div>

